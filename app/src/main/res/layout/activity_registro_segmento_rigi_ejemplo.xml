<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alejo_zr.exceldb.Segmento.Rigido.RegistroSegmentoRigiEjemploActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarRegisSegRigiEjemActivity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/backRegisSegRigiEjemActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_atras"
                    android:tint="@color/toolbar"
                    android:onClick="onClick"/>

                <ImageView
                    android:id="@+id/homeRegisSegRigiEjemActivity"
                    android:layout_width="@dimen/icon"
                    android:layout_height="@dimen/icon"
                    android:background="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/backRegisSegRigiEjemActivity"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/homeRegisSegRigiEjemActivity"
                    android:layout_marginLeft="@dimen/margen_toolbar"
                    android:text="@string/regisSeg"
                    android:textSize="@dimen/subTitulo"
                    android:textColor="@color/toolbar"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbarRegisSegRigiEjemActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_below="@id/toolbarRegisSegRigiEjemActivity">

                <LinearLayout
                    android:id="@+id/llRegistroSegmentoRigiEjem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTipoPavRigiEjem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/pavRigi"
                        android:textSize="@dimen/titulo"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvNombre_Carretera_SegmentoRigiEjem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amacayu"
                            android:textStyle="bold"
                            android:textSize="@dimen/subTitulo"
                            android:layout_centerInParent="true"
                            android:visibility="visible"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/btnManualRegistroSegRigiEjem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mivp"/>
                        <TextView
                            android:id="@+id/ej_Segmento_RigiEjem"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/ejemplo"
                            android:textColor="@color/colorAccent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/marginLeftTV"
                            android:onClick="onClick"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvNumeroRigiEjem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/marginTop"
                        android:text="@string/numero"
                        android:textSize="@dimen/subTitulo"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_camponCalzadasRigiEjem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/campoNCalzadasRigiEjem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/nCalzadas"
                                android:text="1"/>
                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_campoNCarrilesRigiEjem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >

                            <EditText
                                android:id="@+id/campoNCarrilesRigiEjem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/nCarriles"
                                android:text="2"/>
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAnchoRigiEjem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ancho"
                            android:textSize="@dimen/subTitulo"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"/>




                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_campoAnchoBermaRigiEjem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/campoAnchoBermaRigiEjem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/anchoBerma"
                                android:text="0,6 "/>
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llEspesorLosaRegistroSegmentoActivityEjem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/EspeLosaSegmentoRigiActivityEjem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/espesorLosa"
                            android:textSize="@dimen/subTitulo"
                            android:textStyle="bold"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_campoEspesorLosaRigiEjem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/EspesorLosaSegmentoRigiActivityEjem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/espelosa"
                                android:text="30"/>
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/puntoReferencia"
                        android:textSize="@dimen/subTitulo"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_campoPRIRigiEjem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/campoPRIRigiEjem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/pri"
                                android:text="K0+500"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/input_campoPRFRigiEjem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/campoPRFRigiEjem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/prf" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_campoComentariosRigiEjem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/campoComentariosRigiEjem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/comentarios"
                            android:text="Para mayor información sobre el diligenciamiento de este formato, ver el Manual para la inspección de pavimentos (MIVP)"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnFechaRegistroSegRigiEjem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/fecha"
                        android:onClick="onClick" />

                    <EditText
                        android:id="@+id/campoFechaSegmentoRigiRegistroEjem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/fecha"
                        android:text="Obtiene la fecha del sistema, pero igual mente se puede modificar mediante el boton"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/btnRegistroSegmentoRigiEjem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginTop"
                    android:text="@string/regisSeg"
                    android:layout_below="@+id/llRegistroSegmentoRigiEjem"
                    android:onClick="onClick"/>

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>
