<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_horizontal_margin"
    tools:context="com.alejo_zr.exceldb.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name_complete"
            android:textSize="@dimen/titulo"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnManualUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/manual_usuario"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/marginTopTV"
            />

        <Button
            android:id="@+id/btnRegistroCarretera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regis"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/marginTopTV"
            />
        <Button
            android:id="@+id/btnConsultarCarretera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/consul"
            android:onClick="onClick"
            android:layout_marginTop="@dimen/marginTopTV"
            />

        <Button
            android:id="@+id/btnExportar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopTV"
            android:text="@string/exportar"
            android:onClick="onClick"/>

        <RelativeLayout
            android:id="@+id/btnManual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/marginTopTV"
            >

            <ImageButton
                android:id="@+id/imgBtn"
                android:layout_width="@dimen/mivp"
                android:layout_height="@dimen/mivp"
                android:background="@drawable/mivp"
                android:layout_gravity="center_horizontal"
                android:elevation="@dimen/marginTop"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abrir"
                android:textSize="@dimen/subTitulo"
                android:textStyle="bold"
                android:layout_toRightOf="@id/imgBtn"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desarrollado por:"
            android:textStyle="bold|italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ing. Alejandro Mauricio Zorrilla RamÃ­rez"
            android:textStyle="bold|italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ing. Julian David Sanchez Nieto"
            android:textStyle="bold|italic"/>

    </LinearLayout>

</ScrollView>
